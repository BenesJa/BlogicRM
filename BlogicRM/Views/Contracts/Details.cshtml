@model BlogicRM.Models.Entity.Contract

@{
    ViewData["Title"] = "Detail smlouvy";
}

<h1>Detail smlouvy</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Evidenční číslo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EvidenceNumber)
        </dd>
        <dt class = "col-sm-2">
            Instituce:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Institution)
        </dd>
        <dt class = "col-sm-2">
            Klient:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>
        <dt class = "col-sm-2">
            Poradce:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Consultant.Name)
        </dd>
        <dt class = "col-sm-2">
            Datum uzavření:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CloseDate)
        </dd>
        <dt class = "col-sm-2">
            Datum platnosti:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpiDate)
        </dd>
        <dt class = "col-sm-2">
            Datum uzavření:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Upravit smlouvu</a> |
    <a asp-action="Index">Zpět na seznam smluv</a>
</div>
