@model IEnumerable<BlogicRM.Models.Entity.Consultant>

@{
    ViewData["Title"] = "Poradci";
}

<h1>Poradci</h1>

<p>
    <a asp-action="Create">Přidat poradce</a>
    <br />
    <a asp-action="ExportCSV">Exportovat poradce do csv</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Jméno
            </th>
            <th>
                Příjmení
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefon
            </th>
            <th>
                Rodné číslo
            </th>
            <th>
                Věk
            </th>
            <th>
                Možnosti
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConsultantID">Upravit</a> |
                <a asp-action="Details" asp-route-id="@item.ConsultantID">Detail</a> |
                <a asp-action="Delete" asp-route-id="@item.ConsultantID">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>
